<!DOCTYPE html>
<html dir="ltr" lang="<%=  lingua.locale %>">
<head>
    <%- include("../partials/head.ejs") %>
    <title><%= lingua.user.page_title(username) %></title>
</head>
<body>
    <%- include("../partials/nav.ejs") %>
    <header class="masthead text-center text-white">
        <div class="masthead-content">
            <div class="container">
                <img class="img-fluid bot-avatar rounded-circle" src="<%=  favicon %>" width="200px" height="200px"
              alt="">
              <h3 class="masthead-heading mb-0" style="font-size: 3em !important;"><%= username %> </h3>
              <br />
              <a class="btn" title="<%= lingua.user.content.header.add_title(username) %>" onclick="window.location.href = '/user/add/<%= id %>';" role="button" target="blank" style="color: white;">
                <span>
                  <i class="fa fa-plus" aria-hidden="true"></i>
                </span>
                <%= lingua.user.content.header.add_btn %>
              </a>
              
          </div>
        </div>
        </header>

        <section>
            <div class="container">
              <div class="row align-items-center">
                <div class="col-lg-6 order-lg-2">
                  <div class="p-5">
                    <img class="img-fluid" src="<%= favicon %>" title="<%= username %>-icon" alt="<%= username %>-icon">
                  </div>
                </div>
                <div class="col-lg-6 order-lg-1">
                  <div class="p-5">
                    <h3 class="display-5"><%= lingua.user.content.section.description %></h3>
                    <p><%= userDesc %></p>
                  </div>
                </div>
              </div>
            </div>
          </section>
    <%- include("../partials/chatbox.ejs") %>
    <%- include("../partials/footer.ejs") %>
</body>
</html>