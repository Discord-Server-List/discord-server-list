<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head.ejs")  %>
    <title>addAnnouncements | Noisy Penguin Server List</title>
</head>
<body>
    <%- include("../partials/nav.ejs")  %>

    <form action="/admin/addAnnouncements" method="post" style="margin-top: 20%;">
        <div class="form-outline mb-4">
            <input type="text" id="announcementsTitle" name="title" class="form-control" required />
            <label class="form-label" for="announcementsTitle">Title</label>
          </div>
        <div class="form-outline mb-4">
            <textarea class="form-control" id="announcementsBody" name="body" rows="4" required></textarea>
            <label class="form-label" for="announcementsBody">Description</label>
          </div>
          <button type="submit" class="btn btn-primary btn-block mb-4">Send</button>
    </form>
    <%- include("../partials/chatbox.ejs")  %>
    <%- include("../partials/footer.ejs")  %>
</body>
</html>